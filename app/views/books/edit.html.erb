<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @book.errors[:title].any? %>
    <div class="field">
      <div class="field_with_errors">
        <label for='book_title'>Title</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>

  <% else %>
    <div class="field">
      <label for='book_title'>Title</label>
      <%= f.text_field :title %>
    </div>

  <% end %>

  <% if @book.errors[:body].any? %>
    <div class="field">
      <div class="field_with_errors">
        <label for='book_body'>Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>

  <% else %>
    <div class="field">
      <label for='book_body'>Body</label>
      <%= f.text_area :body %>
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', '/books' %>