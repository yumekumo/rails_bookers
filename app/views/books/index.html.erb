<h1>Books</h1>

<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Creare Book' %>
  </div>

<% end %>